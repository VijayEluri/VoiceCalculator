<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/frame_back">

            <org.wolink.app.voicecalc.CalculatorDisplay
                 android:id="@+id/display"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="1"
                 >

                <EditText style="@style/display_style" />
                <EditText style="@style/display_style" />

            </org.wolink.app.voicecalc.CalculatorDisplay>
        <LinearLayout
             android:layout_weight="1"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_margin="4dp"
			 android:background="@drawable/display">
        </LinearLayout>            

    <org.wolink.app.voicecalc.PanelSwitcher
         android:id="@+id/panelswitch"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="5"
         >

    <LinearLayout
         android:id="@+id/simplePad"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:layout_gravity="center"
         >
        <LinearLayout
             android:layout_weight="1"
             android:layout_width="match_parent"
             android:layout_height="0dp">
            <org.wolink.app.voicecalc.ColorButton
                android:id="@+id/mul"
                android:text="@string/mul"
                style="@style/button_style"
                />
            <org.wolink.app.voicecalc.ColorButton
                android:id="@+id/div"
                android:text="@string/div"
                style="@style/button_style"
                />
            <org.wolink.app.voicecalc.ColorButton
                android:id="@+id/del"
                android:text="@string/del"
                style="@style/red_button_style"
                />
            <org.wolink.app.voicecalc.ColorButton
                android:id="@+id/clear"
                android:text="@string/clear"
                style="@style/red_button_style"
                />
        </LinearLayout>

        <LinearLayout
             android:layout_weight="1"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             >
            <org.wolink.app.voicecalc.ColorButton
                android:id="@+id/digit7"
                android:text="@string/digit7"
                style="@style/button_style"
                />
            <org.wolink.app.voicecalc.ColorButton
                android:id="@+id/digit8"
                android:text="@string/digit8"
                style="@style/button_style"
                />
            <org.wolink.app.voicecalc.ColorButton
                android:id="@+id/digit9"
                android:text="@string/digit9"
                style="@style/button_style"
                />
            <org.wolink.app.voicecalc.ColorButton
                android:id="@+id/minus"
                android:text="@string/minus"
                style="@style/button_style"
                />
        </LinearLayout>

        <LinearLayout
             android:layout_weight="2"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             >
        <LinearLayout
             android:layout_weight="3"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:orientation="vertical"
             >
        <LinearLayout
             android:layout_weight="1"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             >            <org.wolink.app.voicecalc.ColorButton
                android:id="@+id/digit4"
                android:text="@string/digit4"
                style="@style/button_style"
                />
            <org.wolink.app.voicecalc.ColorButton
                android:id="@+id/digit5"
                android:text="@string/digit5"
                style="@style/button_style"
                />
            <org.wolink.app.voicecalc.ColorButton
                android:id="@+id/digit6"
                android:text="@string/digit6"
                style="@style/button_style"
                />
        </LinearLayout>

        <LinearLayout
             android:layout_weight="1"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             >
            <org.wolink.app.voicecalc.ColorButton
                android:id="@+id/digit1"
                android:text="@string/digit1"
                style="@style/button_style"
                />
            <org.wolink.app.voicecalc.ColorButton
                android:id="@+id/digit2"
                android:text="@string/digit2"
                style="@style/button_style"
                />
            <org.wolink.app.voicecalc.ColorButton
                android:id="@+id/digit3"
                android:text="@string/digit3"
                style="@style/button_style"
                />
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             >        
            <org.wolink.app.voicecalc.ColorButton
                android:id="@+id/plus"
                android:text="@string/plus"
                style="@style/button_style"
                /> 
        </LinearLayout>               
        </LinearLayout>
        <LinearLayout
             android:layout_weight="1"
             android:layout_width="match_parent"
             android:layout_height="0dp"
             >
        <LinearLayout
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             >
            <org.wolink.app.voicecalc.ColorButton
                android:id="@+id/dot"
                android:text="@string/dot"
                style="@style/button_style"
                />
            <org.wolink.app.voicecalc.ColorButton
                android:id="@+id/digit0"
                android:text="@string/digit0"
                style="@style/button_style"
                />
         </LinearLayout>
         <LinearLayout
             android:layout_weight="1"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             >
            <org.wolink.app.voicecalc.ColorButton
                android:id="@+id/equal"
                android:text="@string/equal"
                style="@style/button_style"
                />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </org.wolink.app.voicecalc.PanelSwitcher>
</LinearLayout>
